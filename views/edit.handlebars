<div class="row justify-space-between-md">
  <div class="spacing new-post-card">
    <h2 class="page-title">Edit Blog</h2>
    <form class="form new-post-form" id = "new-post-form">
    <div class="groupInput">
        <label for="post-title">Post Title:</label>
        <input class="inputBox" type="text" id="post-title" name = "post-title" />
      </div>
      <div class="groupInput">
        <label for="summary">Main Body:</label>
        <input class="inputBox" type="textarea" id="summary" name="summary" />
      </div>
      <div class="groupInput">
        <label for="post-date">Post Date:</label>
        <input class="inputBox" type="date" id="post-date" name="post-date" />
      </div>
      <div class="groupInput">
        <button class="btn pearlBtn" type="submit">Save Post</button>
      </div>
    </form>
  </div>
</div>


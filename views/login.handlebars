<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="spacing page-title">Login</h2>
    <form class="form login-form" id = "login-form">
      <div class="groupInput">
        <label for="email-login">Email:</label>
        <input class="inputBox" type="text" id="email-login" />
      </div>
      <div class="groupInput">
        <label for="password-login">Password:</label>
        <input class="inputBox" type="password" id="password-login" />
      </div>
      <div class="groupInput">
        <button class="btn btn-cream" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">Sign Up</h2>
    <form class="form signup-form" id = "signup-form">
      <div class="groupInput">
        <label for="username-signup">Username:</label>
        <input class="inputBox" type="text" id="username-signup" />
      </div>
      <div class="groupInput">
        <label for="email-signup">Email:</label>
        <input class="inputBox" type="text" id="email-signup" />
      </div>
      <div class="groupInput">
        <label for="password-signup">Password:</label>
        <input class="inputBox" type="password" id="password-signup" />
      </div>
      <div class="groupInput">
        <button class="btn btn-cream" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>